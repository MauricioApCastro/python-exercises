lista_numeros = []
i = 1

while i <= 10:
    try:
        numero = int(input(f"Digite o {i}Âº nÃºmero positivo: "))
        if numero > 0:
            lista_numeros.append(numero)
            i -= 1
        else:
            print("âš ï¸ Digite um nÃºmero maior que zero!")
    except ValueError:
        print("âš ï¸ Entrada invÃ¡lida! Digite apenas nÃºmeros inteiros.")

pares = [n for n in lista_numeros if n % 2 == 0]
impares = [n for n in lista_numeros if n % 2 != 0]
quadrados = [n**2 for n in lista_numeros]
maiores_que_cinco = [n for n in lista_numeros if n > 5]

print(f"\nâœ… Lista completa: {lista_numeros}")
